    .category-card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      flex: 0 0 48%; /* Two items per row */
      margin-bottom: 20px;
      padding: 20px;
      display: flex;
      align-items: center;
      transition: transform 0.3s ease;
      position: relative;
    }

    .category-card:hover {
